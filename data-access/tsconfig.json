{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@library/*": ["./library/*"],
      "@src/*": ["src/*"],
      // "@features/*": ["features/*"],
      // "@screenplay/*": ["screenplay/*"],
    }
  }
}